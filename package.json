{
	"name": "si11y",
	"version": "1.0.10",
	"description": "Sil's Component Library",
	"license": "MIT",
	"main": "dist/silly.esm.js",
	"browser": "dist/silly.esm.js",
	"module": "dist/silly.esm.js",
	"unpkg": "dist/silly.min.js",
	"ssr": "dist/silly.ssr.js",
	"types": "silly.d.ts",
	"files": [
		"dist/*",
		"silly.d.ts",
		"src/**/*.vue"
	],
	"scripts": {
		"serve:webpack": "vue-cli-service serve dev/main.ts",
		"serve": "vite",
		"build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
		"build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
		"build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
		"build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'"
	},
	"devDependencies": {
		"rollup-plugin-scss": "^2.6.1",
		"vue-router": "^4.0.0-beta.13",
		"prettier": "^2.1.2",
		"sass-loader": "^10.0.3",
		"@babel/core": "^7.11.4",
		"@babel/preset-env": "^7.11.0",
		"@babel/preset-typescript": "^7.10.4",
		"@rollup/plugin-alias": "^3.1.1",
		"@rollup/plugin-babel": "^5.2.0",
		"@rollup/plugin-commonjs": "^14.0.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@rollup/plugin-replace": "^2.3.3",
		"@types/lodash": "^4.14.162",
		"cross-env": "^7.0.2",
		"lodash": "^4.17.20",
		"minimist": "^1.2.5",
		"rollup": "^2.26.5",
		"rollup-plugin-postcss": "^3.1.6",
		"rollup-plugin-sass": "^1.2.2",
		"rollup-plugin-terser": "^7.0.0",
		"rollup-plugin-vue": "^6.0.0-beta.10",
		"stylelint": "^13.7.2",
		"stylelint-logical-order": "^0.1.0",
		"stylelint-order": "^4.1.0",
		"typescript": "^3.8.3",
		"vite": "^1.0.0-rc.4",
		"vue": "^3.0.0-rc.9"
	},
	"peerDependencies": {
		"vue": "^3.0.0-rc.9"
	},
	"engines": {
		"node": ">=10"
	}
